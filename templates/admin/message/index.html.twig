{% extends 'admin/dashboard.html.twig' %}

{% block title 'Gerer les messages' %}
{% block body %}
<div class="  row " >
    <div class="col-md-4">
        <h1 class="center-align  "><i class="fas fa-envelope-open-text"></i> Message Recu </h1>
    </div>
</div>
 {% for message in app.flashes('success') %}
    <div class="alert alert-success"id="successMessage">{{ message }}</div>
    {% endfor %}
 <div class="col-lg-5 col-s1 " style="margin-top:32px;margin-bottom:20px" id="button-add">
            <button class="btn btn-light ">
              <i id="btn-slide" class="fas fa-chevron-down" style="padding-right:10px;"></i> Envoyer Un message
            </button>
        </div>
<div class="col-lg-11" id="hide">
    {{ form_start(form) }}
    <div class="row form-group">
        <div class=" col-lg-2 col-s2 mr-2 ">
            {{ form_row(form.mTo) }}
        </div>
        <div class=" col-lg-4 col-s2 mr-2 ">
            {{ form_row(form.container,{ 'label': false }) }}
        </div>
                {{ form_rest(form) }}
    <div class="col-lg-5 col-s1 " style="margin-top:32px">
            <button class="btn btn-primary">{{ button|default('Envoyer') }}</button>

            </div>
        {{ form_end(form)}}
        
    </div>
</div>
<div class=" co_table">
    <table class="table table-striped" id="table_id" class="display" >

        <thead>
            <tr>
                <th>De</th>
                <th >Message</th>
                <th >Date</th>
            </tr>
        </thead>
        <tbody>
            {% for result in results %}
            <tr scope="row">
                <td>{{ result.mFrom }}</td>
                     <td style="width:70%;">{{ result.container }}</td>
                
                <td>{{ result.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>




{% endblock body %}