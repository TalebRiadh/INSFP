{% extends 'base.html.twig' %}

{% block title 'Se Connecter' %}
{% block body %}
<div class="container mt-4"id="connexion">
<img src="images/logo.png" id="logo_c">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData,'security') }}</div>
    {% endif %}
    <form action="{{ path('connexion') }}" method="post">
        <div class="form-group">
            <label for="username">Numéro de téléphone</label>
            <input type="text" class="form-control" required name="_username" value="{{ tel_num }}" placeholder="Numero de telephone ..">
        </div>
        <div class="form-group">
            <label for="password">Mot de Passe</label>
            <input type="password" class="form-control" required name="_password" placeholder="mot de passe ..">
        </div>
        <button id="btn_c" type="submit" class="btn btn-primary"><i class="fas fa-tools" style="padding-right:5px;"></i>Administration</button>


    </form>
</div>
{% endblock body %}